{{> nav-bar}}
<div class="container">
  {{#if loggedIn}}
    {{#each posts as |post|}}
    <p>{{post.id}}</p>
    <p>{{post.post_title}}</p>
    <p>{{post.description}}</p>
    <p>{{post.user_id}}</p>
    <p>{{post.createdAt}}</p>
    <p>{{post.updatedAt}}</p>
    <button type="button" class="btn btn-success">View Full Post</button>
    {{/each}}
  {{else}}
    {{#each posts as |post|}}
    <p>{{post.id}}</p>
    <p>{{post.post_title}}</p>
    <p>{{post.description}}</p>
    <p>{{post.user_id}}</p>
    <p>{{post.createdAt}}</p>
    <p>{{post.updatedAt}}</p>
    {{/each}}
  {{/if}}
</div>
