{{> nav-bar}}
<script src="/assets/js/deletePost.js" defer></script>
<div class="container mt-3">
    <h4 class="text-secondary ps-4">Welcome, {{user.firstname}}  {{user.lastname}} <img src="/images/verified.png" alt="verfied" style="width:14px"></h4>
    <h5 class="text-secondary ps-4">Your posts</h5>
</div>
<div class="container d-flex flex-wrap mt-2">
    {{#each posts as |post|}}
    <div class="post-card p-4">
        <strong><p class="mb-1 fs-5">{{post.post_title}}</p></strong>
        <p >{{ post.createdAt}}</p>
        <a href="/posts/{{post.id}}"><button type="button" class="btn btn-success">View Full Post</button></a>
        <button id="deletePost" value="{{post.id}}" type="button" class="btn btn-danger deletePost">Delete</button>
        <button id="editPost" value="{{post.id}}" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#{{post.id}}">Edit</button>
    </div>
    <div class="modal fade" id="{{post.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Update Post</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <form>
            <div class="mb-3">
            <label for="postTitle" class="form-label">New Post Title</label>
            <input
                type="text"
                class="form-control postTitle"
                id="postTitle"
                value="{{post.post_title}}"
            />
            </div>
            <div class="mb-3">
            <label for="postText" class="form-label">New Post Text</label>
            <textarea class="form-control postText" id="postText">{{post.description}}</textarea>
            </div>
        </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button id="confirmUpdate" type="button" class="btn btn-primary confirmUpdate">Update</button>
        </div>
        </div>
    </div>
    </div>
    {{/each}}
</div>

<script src="/assets/js/updatePost.js" defer></script>