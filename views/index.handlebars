{{> nav-bar}}
<div class="shadow container-fluid bg-primary p-5 mb-4 border-bottom border-2 border-secondary">
  <h1 class="text-secondary fs-1 mt-5">Focus on your goals</h1>
  <p class="text-info fs-4">Discover new post, stories and information <br> about the latest tech topics.</p>
  <a href="/read"><button type="button" class="btn btn-success">Start reading</button></a>
  {{#if loggedIn}}
    <a href="/write"><button type="button" class="btn btn-success">Start writing</button></a>
  {{else}}
    <button
    type="button"
    class="btn btn-success"
    data-bs-toggle="modal"
    data-bs-target="#exampleModal">Log In
    </button>
  {{/if}}
</div>
<div class="container mt-3">
<h4 class="ps-4 mt-5"><i class="fa-solid fa-arrow-up pe-3"></i>Trending on Tech Shore</h4>
  <div class="container d-flex flex-wrap">
    {{#if loggedIn}}
      {{#each posts as |post|}}
      <div class="post-card p-4">
        <p class="mb-1">{{post.user.firstname}} {{post.user.lastname}} <img src="/images/verified.png" alt="verfied" style="width:14px"></p>
        <strong><p class="mb-1 fs-5">{{post.post_title}}</p></strong>
        <p >{{ post.createdAt}}</p>
        <a href="/posts/{{post.id}}"><button type="button" class="btn btn-success">View Full Post</button></a>
      </div>
      {{/each}}
    {{else}}
      {{#each posts as |post|}}
      <div class="post-card p-4">
        <p class="mb-1">{{post.user.firstname}} {{post.user.lastname}} <img src="/images/verified.png" alt="verfied" style="width:14px"></p>
        <strong><p class="mb-1 fs-5">{{post.post_title}}</p></strong>
        <p >{{ post.createdAt}}</p>
      </div>
      {{/each}}
    {{/if}}
  </div>
</div>
